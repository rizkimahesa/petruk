array adalah tipe data digunakan untuk menyimpan sejumlah variabel dengan tipe data yang sama dalam satu lokasi memori

#include <iostream>
using namespace std;

int main(){
  char name[20];
  
  cout << "enter your name";
  cin >> name;
  
  cout << "hello" << name <<endl;
 
#include <iostream>
using namespace std;

int main(){
  char myarray[5] = {10,20,30,40,50};
  for (int i = 0; i < 5; i++){
    cout << "value of elemet" << i << "is" << myarray[i] << endl;
   }
  

pointer adalah variabel nilainya adalah alamat dari variabel lain, yaitu langsung dari lokasi memori
bentuk : tipe_data * nama_pointer;

studi kasus
#include <iostream>
using namespace std;

int main(){
  int arr[5] = {10,20,30,40,50};
  int *ptr = arr;
  
  for(int i = 0; i < 5; i++){
    cout << "value of arr[" << i << "] = " << *ptr << endl;
    ptr++;
 }
 return 0;
}
