namun dia merupakan programmer di umurnya ke 12. untuk mengerjakan tugas menghitung luas, ia ingin membuat program dengan c++

#include <iostream>
#incldue <cmath>
using namespace std;

double luaslingkaran(double r){
    double pi = M_PI;
    return pi*r*r;
}

int main (){
    double r;
    cin >> r;
    cout << "luas lingkaran : " << luaslingkaran(r);
    
    return 0;
    
membuat prosedur absen
#include <iostream>
using namespace std;

void absen (string nama, int npm){
    cout << nama << "_" << npm;
}

int main(){
  string nama;
  int npm;
  
  getline(cin,nama);
  cin >> npm;
  
  absen(nama,npm);
  return 0;
}
